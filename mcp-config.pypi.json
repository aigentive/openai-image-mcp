{
  "description": "OpenAI Image MCP Server configuration for Claude Desktop (PyPI package installation)",
  "mcpServers": {
    "openai-image-mcp": {
      "command": "sh",
      "args": [
        "-c",
        "openai-image-mcp 2> mcp_server_stderr.log"
      ],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    }
  }
}